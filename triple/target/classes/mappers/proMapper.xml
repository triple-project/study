<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.triple.finalp.pro.dao.ProductDao">
	<!-- //test //test//test//test//test//test//test//test//test-->
	<select id="find" resultType="ProVo">
		select *
		from product
		where PRO_CATEGORY = #{id}
	</select>
	
	<!-- 상품등록 (업주) -->
	<insert id="register">
		insert into
		product(product_name,pro_category,product_city,product_img1,product_address)
		values(#{product_name},#{pro_category},#{product_city},#{product_img1},#{product_address})
	</insert>
	<!-- 상품디테일등록 (업주) -->
	<insert id="registerDetail">
		insert into product_detail(pd_contents,pd_img1,pd_name,pd_price)
		values(#{pd_contents},#{pd_img1},#{pd_name},#{pd_price})
	</insert>
	<!-- 상품 목록들 (업주) -->
	<select id="getProId" resultType="ProVo">
		select * from product
		where admin_id=#{admin_id}
	</select>
	<!-- 상품디테일 (업주)//왜만들었찌 다시....보기 <select id="getProDId" resultType="ProDVo"> 
		select * from product_detail where product_id=#{product_id} </select> -->

	<!-- 전체상품리스트 -고객 -->
	<select id="getAllProList" resultType="ProVo">
		select * from product
	</select>
	<!-- 상품클릭시 보여주는 정보 -고객 -->
	<select id="goDetail" resultType="ProDVo">
		select *
		from PRODUCT p ,PRODUCT_DETAIL d
		where p.PRODUCT_ID=#{PRODUCT_ID}
	</select>
	<select id="findp" resultType="ProVo">
		select *
		from PRODUCT
		where PRODUCT_ID = #{PRODUCT_ID}
	</select>
	
	<select id="findpd" resultType="ProDVo">
		select *
		from PRODUCT_DETAIL
		where PRODUCT_ID = #{PRODUCT_ID}
	</select>
		<select id="Ddetail" resultType="ProDVo">
		select *
		from PRODUCT p ,PRODUCT_DETAIL d
		where d.pd_name= #{pd_name}
	</select>
</mapper>